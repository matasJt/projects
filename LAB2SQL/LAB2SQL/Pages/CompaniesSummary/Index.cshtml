@page
@model LAB2SQL.Pages.CompaniesSummary.IndexModel;
@{
    ViewData["Title"] = "Kompanijų informacija";
    int count = 0;
}
<h3 class="">Kompanijų informacija</h3>
<div id="messageContainer"></div>
<form method="post" asp-page-handler="FilterData">
    <div class="w-50">
        <div class="card">
            <div class="card-body">
                <span class="fs-5 color">Filtruoti duomenis pagal</span>
                <div class="inputs">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <select class="form-control" name="company" id="companyDropDown">
                                <option value="">-- Pasirinkti kompanija --</option>
                                @foreach (var professionsOption in Model.companies)
                                {
                                    <option value="@professionsOption">@professionsOption</option>
                                   
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="inputs">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <select class="form-control" name="profession" id="professionDropDown">
                                <option value="">-- Pasirinkti profesija --</option>
                                @foreach (var professionsOption in Model.professions)
                                {
                                    <option value="@professionsOption">@professionsOption</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="inputs">
                    <span class="font-weight-bold color">Nuo</span>
                    <input type="date" name="dateFrom" id="dateFrom" class="form-control" max="2024-12-13">
                </div>
                <div class="inputs">
                    <span class="font-weight-bold color">Iki</span>
                    <input type="date" name="dateTo" id="dateTo" class="form-control" max="2024-12-13">
                </div>
                <button type="button" id="filterButton" asp-page-handler="FilterData" class="btn btn-primary">Filtruoti</button>
            </div>
        </div>
    </div>
    @if (Model.queryCompanies.Count > 0)
    {
        @foreach (var company in Model.queryCompanies)
        {
            <table class="table table-borderless mt-2 rounded-table" id="companyTable">
                <thead>
                    <tr>
                        <th colspan="3" class="employee-header">Kompanija</th>
                    </tr>
                    <tr style="border:2px solid #dee2e6;">
                        <th>Kompanijos pavadinimas</th>
                        <th>Pajamos iš užsakymų</th>
                        <th>Didžiausias atlyginimas</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="company-row">
                        <td>@company.Name</td>
                        <td>@company.Revenue</td>
                        <td>@company.MaxSalary</td>
                    </tr>
                </tbody>
            </table>

                <table class="table table-borderless rounded-table" style="margin-top:-15px;" id="employeeTable">
                    <thead>
                        <tr>
                            <th colspan="7" class="employee-header text-center">Darbuotojai</th>
                        </tr>
                        <tr style="border:2px solid #dee2e6;">
                            <th>Vardas</th>
                            <th>Pavardė</th>
                            <th>Profesija</th>
                            <th>Atlyginimas</th>
                            <th>Vidutinis atlyginimas pagal profesija</th>
                            <th>Didžiausias atlyginimas pagal profesija</th>
                            <th>Atlikta užsakymų nurodytu laikotarpiu (VAIRUOTOJAS) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in company.Employees)
                        {
                            <tr class="@((count++ % 2 == 0) ? "table-primary" : "table-secondary")">
                                <td>@employee.Name</td>
                                <td>@employee.Surname</td>
                                <td>@employee.Profession</td>
                                <td>@employee.Salary</td>
                                <td>@employee.AverageSalaryByProfession</td>
                                <td>@employee.MaxSalaryByProfession</td>
                                <td>@employee.OrdersCount</td>
                            </tr>
                        }
                    </tbody>

                </table>
            <hr class="style-four">
        }

    }

</form>
<style>


    hr.style-four {
        height: 12px;
        border: 0;
        box-shadow: inset 0 12px 12px -12px rgba(0, 0, 0, 0.5);
        color:orange;
    }
    .rounded-table{
        border-radius: 15px;
        overflow: hidden;
    }
    .even {
        background-color: aliceblue;
    }

    .alternate {
        background-color: lightcyan;
    }
    .inputs {
        margin-bottom: 1rem;
    }

    .card {
        margin-top: 2rem;
    }

    .card-header {
        font-size: 1.5rem;
    }

    .card-body .form-control {
        border-radius: 0.25rem;
    }

    .color {
        color: royalblue;
    }

    #messageContainer {
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        color: #333;
        padding: 10px 20px;
        margin-bottom: 20px;
        border-radius: 5px;
        display: none;
    }

        #messageContainer.success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        #messageContainer.error {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }

    .invalid-input {
        border: 1px solid red;
    }


    .company-row {
        background-color:aliceblue;
        font-weight: bold;
    }

    .employee-header {
        background-color: #e9ecef;
        text-align: center;
        color:royalblue;
        border: 2px solid #dee2e6;
    }

    .table th, .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 2px solid #dee2e6;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('filterButton').addEventListener('click', async function () {
            var dataFilled = true;
            var dateFromElement = document.getElementById('dateFrom').value;
            var dateToElement = document.getElementById('dateTo').value;
            var messageContainer = $('#messageContainer');

            if (dateFromElement === "" || dateToElement === "") {
                dataFilled = false;
            }


            if (!dataFilled) {
                messageContainer.addClass('error').text("Data turi būti nurodyta").show();
                document.getElementById('dateFrom').classList.add('invalid-input');
                document.getElementById('dateTo').classList.add('invalid-input');
                window.scrollTo({ top: 0, left: 0, behavior: "smooth" });
                setTimeout(function () {
                    messageContainer.slideUp();
                }, 3000);
                return;
            }
            else{
                document.getElementById('dateFrom').classList.remove('invalid-input');
                document.getElementById('dateTo').classList.remove('invalid-input');
                
                if (@Model.queryCompanies.Count == 0) { messageContainer.addClass('error').text("Nėra duomenų").show(); }
                else { messageContainer.removeClass('error'); messageContainer.addClass('success').text("Prekės išfiltruotos").show(); }
              
   
                window.scrollTo({ top: 0, left: 0, behavior: "smooth" });
                setTimeout(function () {
                    messageContainer.slideUp(function () {
                        document.querySelector("form").submit();
                    });
                }, 700);
            }
           

        });
    });
</script>
<script>

    var dropDown = document.getElementById('companyDropDown');
    var dropDown2 = document.getElementById('professionDropDown');
    document.getElementById('dateTo').value = "@ViewData["dateTo"]";
    document.getElementById('dateFrom').value = "@ViewData["dateFrom"]";

    for (var i = 0; i < dropDown.options.length; i++) {
        if (dropDown.options[i].value === '@ViewData["Company"]') {
            dropDown.options[i].selected = true;
            break;
        }
    }
    for (var i = 0; i < dropDown2.options.length; i++) {
        if (dropDown2.options[i].value === '@ViewData["Profession"]') {
            dropDown2.options[i].selected = true;
            break;
        }
    }
</script>